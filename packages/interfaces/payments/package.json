{
  "name": "@repo/payments",
  "version": "0.1.0",
  "private": true,
  "description": "Payments port and Lemon Squeezy adapter",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for payments package'",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "lemonsqueezy.ts": "^6.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  }
}
